{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "modules/*": [
                "src/modules/*"
            ]
        },
        "outDir": "./dist",
        "rootDir": "./",
        "module": "commonjs",
        "target": "es2019",
        "jsx": "react",
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "pretty": true,
        "lib": [
            "dom", 
            "dom.iterable", 
            "es2019"
        ],
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
    ]
}
